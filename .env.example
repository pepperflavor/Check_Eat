# Database Configuration
DATABASE_URL="postgresql://postgres:your_db_password@localhost:5432/check_eat_db"
DB_NAME=check_eat_db
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=check-eat-files

# Azure Cognitive Services
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=your_azure_document_intelligence_endpoint
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_document_intelligence_key
AZURE_CUSTOM_VISION_PREDICTION_ENDPOINT=your_azure_custom_vision_endpoint
AZURE_CUSTOM_VISION_PREDICTION_KEY=your_azure_custom_vision_key
AZURE_CUSTOM_VISION_PROJECT_ID=your_project_id
AZURE_CUSTOM_VISION_ITERATION_NAME=your_iteration_name

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@summer-jin.store

# PortOne (Identity Verification)
PORTONE_API_SECRET=your_portone_api_secret
PORTONE_STORE_ID=your_portone_store_id

# Application Configuration
NODE_ENV=production
PORT=3000
DOMAIN=summer-jin.store
EMAIL=your_email@summer-jin.store

# CORS Configuration
ALLOWED_ORIGINS=https://summer-jin.store,https://www.summer-jin.store

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/check-eat/app.log

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000